<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Swagger UI</title>
  <%= favicon_link_tag 'swagger_engine/swagger_ui/images/favicon-32x32.png', sizes: '32x32', type: 'image/png' %>
  <%= favicon_link_tag 'swagger_engine/swagger_ui/images/favicon-16x16.png', sizes: '16x16', type: 'image/png' %>

  <%= stylesheet_link_tag 'swagger_engine/swagger_ui/css/typography' %>
  <%= stylesheet_link_tag 'swagger_engine/swagger_ui/css/reset' %>
  <%= stylesheet_link_tag 'swagger_engine/swagger_ui/css/screen' %>
  <%= stylesheet_link_tag 'swagger_engine/swagger_ui/css/reset', media: 'print' %>
  <%= stylesheet_link_tag 'swagger_engine/swagger_ui/css/print', media: 'print' %>


  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/object-assign-pollyfill.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/jquery-1.8.0.min.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/jquery.slideto.min.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/jquery.wiggle.min.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/jquery.ba-bbq.min.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/handlebars-4.0.5.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/lodash.min.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/backbone-min.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/swagger-ui.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/highlight.9.1.0.pack.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/highlight.9.1.0.pack_extended.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/jsoneditor.min.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/marked.js' %>
  <%= javascript_include_tag 'swagger_engine/swagger_ui/lib/swagger-oauth.js' %>

  <!-- Some basic translations -->
  <!-- <script src='lang/translator.js' type='text/javascript'></script> -->
  <!-- <script src='lang/ru.js' type='text/javascript'></script> -->
  <!-- <script src='lang/en.js' type='text/javascript'></script> -->

  <script type="text/javascript">
      $(function () {
          var url = window.location.search.match(/url=([^&]+)/);
          if (url && url.length > 1) {
              url = decodeURIComponent(url[1]);
          } else {
              url = '<%= @swagger_url %>';
          }

          hljs.configure({
              highlightSizeThreshold: 5000
          });

          // Pre load translate...
          if(window.SwaggerTranslator) {
              window.SwaggerTranslator.translate();
          }
          window.swaggerUi = new SwaggerUi({
              url: url,
              dom_id: "swagger-ui-container",
              supportedSubmitMethods: ['get', 'post', 'put', 'delete', 'patch'],
              validatorUrl: false,
              onComplete: function(swaggerApi, swaggerUi){
                  if(typeof initOAuth == "function") {
                      initOAuth({
                          clientId: "your-client-id",
                          clientSecret: "your-client-secret-if-required",
                          realm: "your-realms",
                          appName: "your-app-name",
                          scopeSeparator: " ",
                          additionalQueryStringParams: {}
                      });
                  }

                  if(window.SwaggerTranslator) {
                      window.SwaggerTranslator.translate();
                  }
              },
              onFailure: function(data) {
                  log("Unable to Load SwaggerUI");
              },
              docExpansion: "none",
              jsonEditor: false,
              defaultModelRendering: 'schema',
              showRequestHeaders: false
          });

          window.swaggerUi.load();

          function log() {
              if ('console' in window) {
                  console.log.apply(console, arguments);
              }
          }
      });
  </script>
</head>

<body class="swagger-section">
<div id='header'>
  <div class="swagger-ui-wrap">
    <a id="logo" href="http://swagger.io"><%= image_tag('swagger_engine/swagger_ui/images/logo_small.png', class: 'logo__img', alt: 'swagger', height: '30', width: '30') %><span class="logo__title">swagger</span></a>
    <form id='api_selector'>
      <div class='input'><input placeholder="http://example.com/api" id="input_baseUrl" name="baseUrl" type="text"/></div>
      <div id='auth_container'></div>
      <div class='input'><a id="explore" class="header__btn" href="#" data-sw-translate>Explore</a></div>
    </form>
  </div>
</div>

<%= yield %>

</body>
</html>




